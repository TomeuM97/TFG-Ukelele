<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.learnukelele.views.NotePlacerView
        android:id="@+id/notePlacer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notePlacerSecondsTimestamp"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:text="-"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/notePlacer"
        app:layout_constraintEnd_toEndOf="@+id/notePlacer"
        app:layout_constraintTop_toTopOf="@+id/notePlacer" />

    <TextView
        android:id="@+id/notePlacerMinutesTimestamp"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/notePlacer"
        app:layout_constraintStart_toStartOf="@+id/notePlacer"
        app:layout_constraintTop_toTopOf="@+id/notePlacer" />

</androidx.constraintlayout.widget.ConstraintLayout>